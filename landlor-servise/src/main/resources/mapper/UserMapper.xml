<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lym.mapper.UserMapper">
    <select id="selectUser" resultType="vo.UserVO" parameterType="int">
        select * from user_inf where id = #{id}
    </select>
    <select id="selectAll" resultType="vo.UserVO">
        select * from user_inf
    </select>
    <select id="login" resultType="vo.UserVO" parameterType="dto.UserDTO">
        select t.user_name AS userName, t.password AS password, t.real_name AS realName FROM t_user t
        WHERE t.user_name = #{userName} AND t.password = #{password}
    </select>
</mapper>